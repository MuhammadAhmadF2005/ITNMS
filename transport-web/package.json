{
    "name": "transport-web-system",
    "version": "1.0.0",
    "description": "Intelligent Transport Network Management System - Web Version",
    "main": "index.js",
    "scripts": {
        "setup": "chmod +x setup.sh && ./setup.sh",
        "dev": "chmod +x dev.sh && ./dev.sh",
        "start:backend": "chmod +x run-backend.sh && ./run-backend.sh",
        "start:frontend": "chmod +x run-frontend.sh && ./run-frontend.sh",
        "build:backend": "cd backend && make",
        "build:frontend": "cd frontend && npm run build",
        "install:all": "cd backend && make install-deps && cd ../frontend && npm install",
        "clean": "cd backend && make clean && cd ../frontend && rm -rf node_modules build",
        "demo": "cd backend && g++ -std=c++17 enhanced_server.cpp -o enhanced_demo && ./enhanced_demo"
    },
    "keywords": [
        "transport",
        "network",
        "management",
        "cpp",
        "react",
        "dsa",
        "algorithms",
        "graph",
        "dijkstra",
        "visualization"
    ],
    "author": "Transport Web Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/transport-web-system.git"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "devDependencies": {
        "concurrently": "^7.6.0"
    }
}